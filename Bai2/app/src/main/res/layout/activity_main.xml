<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="18dp"
    android:layout_marginTop="250dp">

    <!-- Layout cho Thread 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvThread1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread 1"
            android:textSize="20sp"
            android:layout_marginEnd="9dp" />

        <Button
            android:id="@+id/btnThread1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start/Stop" />
    </LinearLayout>

    <!-- Layout cho Thread 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvThread2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread 2"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnThread2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start/Stop" />
    </LinearLayout>

    <!-- Layout cho Thread 3 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvThread3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread 3"
            android:textSize="20sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnThread3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start/Stop" />
    </LinearLayout>

</LinearLayout>
